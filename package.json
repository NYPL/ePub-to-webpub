    "husky": "^6.0.0",
    "jest": "^27.0.1",
    "jest-watch-typeahead": "^0.6.4",
    "msw": "^0.28.2",
    "np": "^7.5.0",
    "ora": "^5.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sade": "^1.7.4",
    "size-limit": "^4.11.0",
